<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" android:layout_width="fill_parent"
	style="@style/ButtonBar">
	<Button android:layout_weight="1" android:id="@+id/bSave" android:text="@string/save"
		android:backgroundTint="@color/button_background"
		android:layout_height="wrap_content" android:layout_width="0dp"/>
	<Button android:layout_height="wrap_content" android:layout_weight="1"
		android:backgroundTint="@color/button_background"
		android:id="@+id/bCancel" android:text="@string/cancel" android:layout_width="0dp"/>
</LinearLayout>
